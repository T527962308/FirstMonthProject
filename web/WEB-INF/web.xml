<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>logOnServlet</servlet-name>
        <servlet-class>com.Servlet.LogOnServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logOnServlet</servlet-name>
        <url-pattern>/logOnServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.Servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>homePageServlet</servlet-name>
        <servlet-class>com.Servlet.HomePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePageServlet</servlet-name>
        <url-pattern>/homePageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addGoodsServlet</servlet-name>
        <servlet-class>com.Servlet.AddGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGoodsServlet</servlet-name>
        <url-pattern>/addGoodsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteGoodsServlet</servlet-name>
        <servlet-class>com.Servlet.DeleteGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteGoodsServlet</servlet-name>
        <url-pattern>/deleteGoodsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>changeGoodsServler</servlet-name>
        <servlet-class>com.Servlet.ChangeGoodsServler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeGoodsServler</servlet-name>
        <url-pattern>/changeGoodsServler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>submissionGoodsServlet</servlet-name>
        <servlet-class>com.Servlet.SubmissionGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submissionGoodsServlet</servlet-name>
        <url-pattern>/submissionGoodsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>downloadFileServlet</servlet-name>
        <servlet-class>com.Servlet.DownloadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloadFileServlet</servlet-name>
        <url-pattern>/downloadFileServlet</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>coderFilter</filter-name>
        <filter-class>Work.Filter.CoderFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        </filter>
<filter-mapping>
<filter-name>coderFilter</filter-name>
<url-pattern>/*</url-pattern>
</filter-mapping>

        </web-app>